#!/usr/bin/env bash

# {{ ansible_managed }}

{% set avacms_venv_bin = avacms_home + "/venvs/" + avacms_service_name + "/bin" %}
{% if COMMON_ENABLE_NEWRELIC_APP %}
{% set executable = avacms_venv_bin + '/newrelic-admin run-program ' + avacms_venv_bin + '/gunicorn' %}
{% else %}
{% set executable = avacms_venv_bin + '/gunicorn' %}
{% endif %}

{% if COMMON_ENABLE_NEWRELIC_APP %}
export NEW_RELIC_APP_NAME="{{ AVACMS_NEWRELIC_APPNAME }}"
export NEW_RELIC_LICENSE_KEY="{{ NEWRELIC_LICENSE_KEY }}"
{% endif -%}

source {{ avacms_home }}/avacms_env
{{ executable }} -c {{ avacms_home }}/avacms_gunicorn.py {{ AVACMS_GUNICORN_EXTRA }} avacms.wsgi:application
